<%= form_with(model: enrollment) do |form| %>
  <% if enrollment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(enrollment.errors.count, "error") %> prohibited this enrollment from being saved:</h2>

      <ul>
        <% enrollment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
#courses dropdown
 <div>
    <%= form.label :course_id, "Course", style: "display: block" %>
    <%= form.select :course_id,
          options_from_collection_for_select(@courses, :id, :title, enrollment.course_id),
          { prompt: "Select a Course" } %>
  </div>

#Students dropdown
  <div>
    <%= form.label :student_id, "Student", style: "display: block" %>
    <%= form.select :student_id,
          options_from_collection_for_select(@students, :id, :name, enrollment.student_id),
          { prompt: "Select a Student" } %>
  </div>

  <div>
    <%= form.label :final_grade, style: "display: block" %>
    <%= form.text_field :final_grade %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
