-->  
    <%= form.label :coding_class_id, {}, { class: 'form-text' } %>
    <%= form.select :coding_class_id, options_from_collection_for_select(@coding_classes, :id, :title), { prompt: 'Select Coding Class' }, { class: 'form-control' } %>
   
  </div>


  <div>
    <%= form.label :trimester_id, {}, { class: 'form-text' }%>
